{% extends "layout.njk" %}

{% block head %}
  <title>About - My Profile</title>
{% endblock %}

{% block content %}

  <div id="wrapper">
    <img src="{{avatar_url}}" alt="Imagem de {{name}}">
    <h1>{{name}}</h1>
    <h2>{{role}}</h2>
    <p>{{description}}</p>
  </div>

  <div id="links-footer" class="links">
    {% for link in links %}
      <a href="{{link.url}}" target="_blank">{{link.name}}</a>
    {% endfor %}
  </div>
 
{% endblock %}