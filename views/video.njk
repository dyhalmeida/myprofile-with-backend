{% extends "layout.njk" %}

{% block head %}
  <title>{{title}} - My Profile</title>
{% endblock %}

{% block content %}
  <div id="wrapper" class="video">
    <h1 title="{{title}}">{{title}}</h1>
  </div>
  <section class="video">
      <div class="card">
        <div class="card-video-container">
         <iframe src="https://www.youtube.com/embed/{{id}}" frameborder="0"></iframe>
        </div>
        <div class="card-content"> 
          <p>
            {{title}}
          </p>
        </div>
        <div class="card-info">
          <p>{{duration}}</p>
          <p class="price">
            {{price}}
          </p>
        </div>
      </div>
  </section>

{% endblock %}
